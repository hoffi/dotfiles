[color]
  ui = true
[alias]
  ls = rev-parse HEAD
  mt = mergetool
[merge]
  tool = vimdiff
[mergetool]
  path = nvim
  prompt = false
  trustExitCode = true
  keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[apply]
  whitespace = nowarn
[push]
  default = current
[core]
  autocrlf = input
  savecrlf = true
  editor = nvim
  excludesfile = ~/.gitignore_global
  commentChar = >
[include]
  path = ~/.gitconfig.user
